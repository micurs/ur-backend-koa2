{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": false
  },
  "include": [
    "./src/**.ts"
  ]
}
